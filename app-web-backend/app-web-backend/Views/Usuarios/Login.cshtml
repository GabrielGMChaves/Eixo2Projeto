@model app_web_backend.Models.Usuario

@{
    ViewData["Title"] = "Login";
}
<br />
<div class="row"><h1>Efetue seu Login</h1></div>
<br />
<div class="row">
    <div class="col-md-4 login__container container">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Entrar" class="btn btn-primary login__submit">Login</button>
            </div>
        </form>
        <h3> @ViewBag.Message </h3>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
