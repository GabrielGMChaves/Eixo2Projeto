@model app_web_backend.Models.Usuario

@{
    ViewData["Title"] = "Efetue o Registro";
}
<br />
<div class="row">
    <h1>Registre-se aqui!</h1>
</div>
<br />

<div class="">
    <div class="">
        <form asp-action="Create" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Insira seu nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <h3>@ViewBag.Message</h3>
            <div class="form-group col-md-6">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Insira seu Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" placeholder="Insira sua Senha" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control"  type="number" placeholder="Insira seu CPF" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control" style="min-height: 170px" placeholder="Insira aqui sua descrição"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" placeholder="Insira seu Endereço" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone"  type="number" class="form-control" placeholder="Insira seu Telefone" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Cep" class="control-label"></label>
                <input asp-for="Cep"  type="number" class="form-control" placeholder="Insira seu CEP" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" asp-items="Html.GetEnumSelectList<Estados>()"></select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Perfil" class="control-label"></label>
                <select asp-for="Perfil" class="form-control" asp-items="Html.GetEnumSelectList<Perfil>()"></select>
                <span asp-validation-for="Perfil" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-outline-secondary">Registrar</button>
            </div>
        </form>
    </div>
</div>
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

